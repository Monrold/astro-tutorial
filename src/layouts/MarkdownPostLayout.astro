---
import BaseLayout from '../layouts/baseLayout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>

<div class="lg:max-w-screen-md m-auto text-white lg:my-10">
        
        <a class="flex flex-wrap items-center" href="../../blog">
        <svg xmlns="http://www.w3.org/2000/svg" class="fill-[#929191] hover:fill-[#2AA0D9] rotate-180 mr-2" height="1em" viewBox="0 0 448 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M438.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-160-160c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L338.8 224 32 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l306.7 0L233.4 393.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l160-160z"/></svg>
        <p class="text-[#929191] hover:text-[#2AA0D9]">ir atr√°s</p>
        </a>          
        
        <h1 class="text-5xl my-5" >{frontmatter.title}</h1>
        <img src={frontmatter.image.url} width="auto" alt={frontmatter.image.alt}/>
        <div class="my-5 ml-2 flex flex-wrap">
        <p class="py-2">Escrito por: {frontmatter.author}</p>
        <p class="py-2 sm:mx-5">Publicado el: {frontmatter.Date.slice(0,10)}</p>
        <p class="bg-[#2AA0D9] p-2 rounded-lg">{frontmatter.tags.join(', ')}</p>
        </div>
        <slot />
</div>

</BaseLayout>